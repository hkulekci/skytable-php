{
    "name": "hkulekci/skytable-php",
    "description": "This library is a client for PHP that allows you to interact with the Skytable server.",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Skytable\\": "src/"
        },
        "files": [
            "src/utilities.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "SkytableTest\\": "tests/SkytableTest/"
        }
    },
    "authors": [
        {
            "name": "Haydar KULEKCI",
            "email": "haydarkulekci@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-sockets": "*",
        "clue/socket-raw": "^1.6"
    },
    "require-dev": {
        "mockery/mockery": "^1.5",
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "coverage": "composer test -- --coverage-html ./coverage-report",
        "test": "phpunit -c ./phpunit.xml"
    }
}
